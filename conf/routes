# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET         /                                              controllers.Application.index
POST        /api/deploy/:env/:stackName                      controllers.Application.deploy(env: String, stackName:String)
GET         /api/deploy/status/:env/:stackName               controllers.Application.status(env: String, stackName:String)
GET         /api/deploy/status-events/:env/:stackName        controllers.Application.statusSocket(env: String, stackName:String)

GET         /system-info/version                           controllers.Application.buildInfo
